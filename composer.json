{
    "require": {
        "php": ">=5.3.0",
        "sandex/Phemo": "dev-master",
        "sandex/PhemoWidgetsBundle": "dev-master"
    },
    "config": {
        "component-dir": "public/assets",
        "component-baseurl": "/assets"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/Sandex/Phemo.git"
        },
        {
            "type": "git",
            "url": "https://github.com/Sandex/PhemoWidgetsBundle.git"
        },
        {
            "type": "package",
            "package": {
                "name": "components/activity-indicator",
                "type": "component",
                "version": "1.0.0",
                "source": {
                    "type": "git",
                    "url": "https://github.com/neteye/jquery-plugins.git",
                    "reference": "master"
                },
                "require": {
                    "robloach/component-installer": "*"
                },
                "extra": {
                    "component": {
                        "scripts": [
                            "activity-indicator/activity-indicator.js"
                        ]
                    }
                }

            }
        }
    ]
}